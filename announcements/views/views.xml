<odoo>
  <data>
    <!-- Announcement Form View -->
    <record model="ir.ui.view" id="announcement_form_view">
      <field name="name">announcement.form</field>
      <field name="model">announcements.announcements</field>
      <field name="arch" type="xml">
        <form string="Announcement">
          <sheet>
            <group>
              <field name="title"/>
              <field name="priority" widget="priority"/>
              <field name="is_universal"/>
              <field name="release_at"/>
              <field name="expiry_at"/>
            </group>
            <notebook>
              <page string="Content">
                <field name="description" widget="html"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Announcement Tree/List View -->
    <record model="ir.ui.view" id="announcement_tree_view">
      <field name="name">announcement.tree</field>
      <field name="model">announcements.announcements</field>
      <field name="arch" type="xml">
        <list string="Announcements">
          <field name="title"/>
          <field name="release_at"/>
          <field name="expiry_at"/>
          <field name="priority" widget="priority"/>
          <field name="is_universal"/>
        </list>
      </field>
    </record>

    <!-- Announcement Kanban View -->
    <record id="view_announcement_kanban" model="ir.ui.view">
        <field name="name">announcement.kanban</field>
        <field name="model">announcements.announcements</field>
        <field name="arch" type="xml">
            <kanban default_group_by="priority">
                <field name="title"/>
                <field name="release_at"/>
                <field name="expiry_at"/>
                <field name="is_universal"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>
                                <ul>
                                    <li>Release: <field name="release_at"/></li>
                                    <li>Expiry: <field name="expiry_at"/></li>
                                    <li><field name="is_universal"/> Universal</li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Actions for Announcements -->
    <record model="ir.actions.act_window" id="announcement_action_window">
      <field name="name">Announcements</field>
      <field name="res_model">announcements.announcements</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create your first Announcement!
        </p>
      </field>
    </record>

    <!-- Menu Items -->
    <menuitem name="Announcements" id="announcements_menu_root" web_icon="announcements,static/description/icon.png"/>
    <menuitem name="All Announcements" id="announcements_menu_all" parent="announcements_menu_root"
              action="announcement_action_window" sequence="10"/>

  </data>
</odoo>
