<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="batches.list">
      <field name="name">batches list</field>
      <field name="model">batches.batches</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="description"/>
          <field name="code"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="batches.action_window">
      <field name="name">batches window</field>
      <field name="res_model">batches.batches</field>
      <field name="view_mode">list,form</field>
    </record>

