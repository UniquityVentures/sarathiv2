<odoo>
  <data>
    <!-- Topic Form View -->
    <record model="ir.ui.view" id="topic_form_view">
      <field name="name">topic.form</field>
      <field name="model">topic.topic</field>
      <field name="arch" type="xml">
        <form string="Topic">
          <sheet>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Topic Tree/List View -->
    <record model="ir.ui.view" id="topic_tree_view">
      <field name="name">topic.tree</field>
      <field name="model">topic.topic</field>
      <field name="arch" type="xml">
        <list string="Topics">
          <field name="name"/>
          <field name="code"/>
        </list>
      </field>
    </record>

    <!-- Actions for Topics -->
    <record model="ir.actions.act_window" id="topic_action_window">
      <field name="name">Topics</field>
      <field name="res_model">topic.topic</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create your first Topic!
        </p>
      </field>
    </record>

    <!-- Menu Items -->
    <menuitem name="Topics" id="topic_menu_root" web_icon="topic,static/description/icon.png"/>
    <menuitem name="All Topics" id="topic_menu_all" parent="topic_menu_root"
              action="topic_action_window" sequence="10"/>

  </data>
</odoo>
