<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="semester.list">
      <field name="name">semester list</field>
      <field name="model">semester.semester</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="code"/>
          <field name="start"/>
          <field name="end"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="semester.action_window">
      <field name="name">semester window</field>
      <field name="res_model">semester.semester</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- server action to the one above -->
